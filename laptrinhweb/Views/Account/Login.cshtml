@model laptrinhweb.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<br />
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            <div class="row w-25 mx-auto">
                <h2>Đăng nhập</h2>
                <div class="col-md-12">
                    @Html.LabelFor(temp => temp.UserName)
                    @Html.TextBoxFor(temp => temp.UserName, new { placeholder = "Tên đăng nhập", @class = "form-control" })
                    @Html.ValidationMessageFor(temp => temp.UserName)
                </div>
                <div class="col-md-12">
                    @Html.LabelFor(temp => temp.Password)
                    @Html.TextBoxFor(temp => temp.Password, new { placeholder = "Mật khẩu", @class = "form-control", type = "password" })
                    @Html.ValidationMessageFor(temp => temp.Password)
                </div>
            </div>
            <div class="row w-25 mx-auto">
                <div class="col-md-12">
                    @Html.ValidationSummary()
                </div>
                <div class="col-md-2"></div>
                <div class="col">
                    <button type="submit" class="btn btn-success">Đăng nhập</button>
                </div>
            </div>
        }

