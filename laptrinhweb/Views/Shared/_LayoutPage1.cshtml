<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/Scripts/jquery-3.6.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>@ViewBag.Title</title>
    <style>
        body {
            background-color: #f3f3f3;
        }

        li a {
            text-decoration: none;
        }

        div a {
            text-decoration: none;
            color: black;
        }

        .field-validation-error {
            color: red;
        }

        .validation-summary-errors {
            color: red;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-text" style="background-color: #ffd400">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarScroll">
                <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                    <li class="nav-item">
                        <a class="nav-link" href="/home/index">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/sanpham/index">Sản phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/giohang/hienthigiohang">Giỏ hàng</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/account/Logout">Đăng xuất</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/account/Register">Đăng ký</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/account/Login">Đăng nhập</a>
                        </li>
                    }

                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <div style="font-weight: bold; position: relative; left: -15px;">Hello <a style="color: blue; text-decoration:underline" href="/account/myprofile">@User.Identity.Name</a></div>
                }
                <form class="d-flex" role="search" action="/sanpham/index">
                    <input class="form-control me-2" type="search" placeholder="Search..." id="search" name="search" value="@ViewBag.search">
                    <button class="btn" style="background-color:darkorange" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>
    <br />
    <div class="container-fluid">
        <div class="row">
            <div class="col-9">
                @RenderBody()
            </div>
            <div class="col-3">
                <ul class="list-group">
                    <li class="list-group-item active bg-primary">ĐIỆN THOẠI THEO THƯƠNG HIỆU</li>
                    <li class="list-group-item"><a href="/sanpham/locthuonghieu/1">Iphone</a></li>
                    <li class="list-group-item"><a href="/sanpham/locthuonghieu/2">Samsung</a></li>
                    <li class="list-group-item"><a href="/sanpham/locthuonghieu/3">Oppo</a></li>
                    <li class="list-group-item active bg-primary">ĐIỆN THOẠI THEO CHỦ ĐỀ</li>
                    <li class="list-group-item"><a href="/sanpham/locchude/1">Chơi game</a></li>
                    <li class="list-group-item"><a href="/sanpham/locchude/2">Quay phim, chụp ảnh</a></li>
                    <li class="list-group-item"><a href="/sanpham/locchude/3">Học tập</a></li>
                </ul>
            </div>

        </div>
    </div>

    <br /><br /><br /><br /><br /><br />
    <footer id="sticky-footer" class="flex-shrink-0 py-4 bg-dark text-white-50">
        <div class="container text-center">
            <small>Phong Pham &copy; 2022</small>
        </div>
    </footer>
</body>
</html>
<script>
    $("#sortDrop").change(function () {
        const value = $("#sortDrop").val();
        window.location.href = "/sanpham/index?sort=" + value;
    })
</script>
